{
    "name": "wykop blacklist",
    "version": "0.0.0.1",
    "manifest_version": 2,
    "description": "A Chromium extension to block users on wykop.pl",
    "browser_action": {
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.wykop.pl/*"
            ],
            "js": [
                "utils.js",
                "comments.js",
                "overlay.js",
                "blocker.js"
            ],
            "css": [
                "style.css"
            ]
        }
    ]
}